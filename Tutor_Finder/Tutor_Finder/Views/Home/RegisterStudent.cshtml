
@{
    ViewBag.Title = "RegisterStudent";
}

<h2>Register Student</h2>

<form action="/Student/Create" method="POST">
    <div>
        <label>Student First Name:</label> <input type="text" name="StudentFirstName" />
    </div>
    <div>
        <label>Student Last Name:</label> <input type="text" name="StudentLastName" />
    </div>
    <div>
        <label>Student Semester:</label> <input type="text" name="StudentSemester" />
    </div>
    <div>
        <label>Student Number:</label> <input type="text" name="StudentNumber" />
    </div>
    <div>
        <input type="submit" value="Register" />

    </div>
    <div>
        <p>Already a User?</p>
    </div>
    <div>
        <input type="submit" value="Login" />

    </div>
</form>
