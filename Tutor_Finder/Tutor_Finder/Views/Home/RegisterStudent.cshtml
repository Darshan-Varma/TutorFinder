
@{
    ViewBag.Title = "RegisterStudent";
}

<h2>Register Student</h2>

<form action="/Student/Create" method="POST">
    <div>
        <label>First Name:</label> <input type="text" name="StudentFirstName" />
    </div>
    <div>
        <label>Last Name:</label> <input type="text" name="StudentLastName" />
    </div>
    <div>
        <label>Semester:</label> <input type="text" name="StudentSemester" />
    </div>
    <div>
        <label>Student Number:</label> <input type="text" name="StudentNumber" />
    </div>
    <div>
        <label>Contact Number:</label> <input type="text" name="StudentContactNumber" />
    </div>
    <div>
        <label>Email ID:</label> <input type="text" name="StudentEmailID" />
    </div>
    <div>
        <label>Password:</label> <input type="text" name="StudentPassword" />
    </div>
    <div>
        <input type="submit" value="Register" />

    </div>
    <div>
        <p>Already a User?</p>
    </div>
    <div>
        <input type="submit" value="Login" />

    </div>
</form>
