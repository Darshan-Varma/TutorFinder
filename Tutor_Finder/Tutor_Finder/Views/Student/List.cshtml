@model IEnumerable<Tutor_Finder.Models.StudentDto>
@{
    ViewBag.Title = "List of Students";
}

<h2>List of Students</h2>
@if (Session["isAdmin"].ToString() == "true")
{
    <a href="/Student/New">New Student</a>
}
    @foreach (var Student in Model)
    {
        <h3><a href="/Student/Details/@Student.StudentID">@Student.StudentFirstName, @Student.StudentLastName</a></h3>
    }